                group.loc[idx, 'bp_diff'] = bp_diff
                diff_durations.append(row['days_since_MRA'])
            elif row['consistent_med'] == 0:
                group.loc[idx, 'bp_diff'] = bp_diff
                diff_durations.append(row['days_since_MRA'])
